n = int(input("Введите натуральное число: "))
if n < 2:
   print("Число должно быть больше 1")
else:
   flag = True
   for i in range(2, int(n ** 0.5) + 1):
       if n % i == 0:
           flag = False
           break
   if flag:
       print("Число является простым")
   else:
       print("Число не является простым")
